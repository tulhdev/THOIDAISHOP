<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200sp"
    android:layout_gravity="center_vertical"
    android:background="@drawable/khungitem">

    <TextView
        android:id="@+id/txtBancochanchanmuonxoa"
        android:layout_width="match_parent"
        android:layout_height="130sp"
        android:fontFamily="@font/baloothambi2bold"
        android:gravity="center"
        android:text="Bạn có chắc chắn muốn xóa không?"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_below="@+id/txtBancochanchanmuonxoa"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_out_Xoa_DonHang"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10sp"
            android:background="@drawable/khung_button"
            android:text="Thoát"
            android:textColor="#4696EB" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confilm_Xoa_DonHang"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10sp"
            android:background="@drawable/khung_button"
            android:text="Xóa"
            android:textColor="#de0b0b" />
    </LinearLayout>
</RelativeLayout>