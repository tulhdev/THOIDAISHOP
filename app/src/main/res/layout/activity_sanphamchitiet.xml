<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sanphamchitiet"
    android:padding="10dp">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="1500dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_ios_34"
        />

    <ImageView
        android:id="@+id/ImaSP"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/san_pham" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giày là một loại thứ dùng được đặt lên chân để bảo vệ và hỗ trợ chân của chúng ta khi đi lại. Ngoài chức năng chính là bảo vệ, giày cũng trở thành một phần không thể thiếu trong thời trang và phản ánh cá nhân của mỗi người.
Có rất nhiều loại giày khác nhau phục vụ cho các mục đích và hoàn cảnh khác nhau."
            android:textSize="20dp" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sản phẩm"
        android:textSize="30dp"
        android:padding="10dp"
        android:textStyle="bold"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#AAA9A4">
                <TextView
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:text="Mã sản phẩm : "
                    android:textStyle="italic"
                    android:textSize="20dp"
                    android:padding="10dp"
                    />
                <TextView
                    android:id="@+id/txtmasp_ct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên sản phẩm : "
                    android:textStyle="italic"
                    android:textSize="20dp"
                    android:padding="10dp"
                    />
            </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#AAA9A4">
            <TextView
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm : "
                android:textStyle="italic"
                android:textSize="20dp"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/txttensp_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm : "
                android:textStyle="italic"
                android:textSize="20dp"
                android:padding="10dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#AAA9A4">
            <TextView
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:text="Giá sản phẩm : "
                android:textStyle="italic"
                android:textSize="20dp"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/txtgiasp_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm : "
                android:textStyle="italic"
                android:textSize="20dp"
                android:padding="10dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#AAA9A4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Lượng sản phẩm: "
                android:textStyle="italic"
                android:textSize="20dp"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/txtsoluongsp_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm : "
                android:textStyle="italic"
                android:textSize="20dp"
                android:padding="10dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#AAA9A4">
            <TextView
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:text="Size sản phẩm : "
                android:textStyle="italic"
                android:textSize="20dp"
                android:padding="10dp"
                />

            <TextView
                android:id="@+id/txtsize_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Tên sản phẩm : "
                android:textSize="20dp"
                android:textStyle="italic" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#AAA9A4">
            <TextView
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:text="Tên thương hiệu : "
                android:textStyle="italic"
                android:textSize="20dp"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/txttenth_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm : "
                android:textStyle="italic"
                android:textSize="20dp"
                android:padding="10dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#AAA9A4">
            <TextView
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:text="Tên loại sản phẩm : "
                android:textStyle="italic"
                android:textSize="20dp"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/txttenlsp_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm : "
                android:textStyle="italic"
                android:textSize="20dp"
                android:padding="10dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/btnthemgh_ct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THÊM VÀO GIỎ HÀNG"
            android:backgroundTint="#8BC34A"
            android:layout_marginEnd="10dp"/>
        <Button
            android:id="@+id/btnMuangay_ct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary"
            android:text="MUA NGAY"/>
    </LinearLayout>

</LinearLayout>
    </ScrollView>
</LinearLayout>