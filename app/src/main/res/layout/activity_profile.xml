<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">

    <ImageView
        android:id="@+id/img_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/hi_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_Back"
        android:layout_marginLeft="15sp"
        android:fontFamily="@font/baloothambi2regular"
        android:text="HI, Tú"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hi_Name"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="30sp"
        android:src="@drawable/khung_profile" />


    <ImageView
        android:id="@+id/imgAvatar_Profile"
        android:layout_width="190dp"
        android:layout_height="170dp"
        android:layout_below="@+id/hi_Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/anh_nguoi_dung" />

    <LinearLayout
        android:id="@+id/lin_Khung_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgAvatar_Profile"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/button_backgruod_login"
        android:orientation="vertical"
        android:padding="6sp">

        <TextView
            android:id="@+id/txtPMaNguoiDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2medium"
            android:text="Mã người dùng: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtPTenDangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2medium"
            android:text="Tên đăng nhập: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtPHoTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2medium"
            android:text="Họ và tên: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtPSoDienThoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2medium"
            android:text="Số điện thoại: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtPEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2medium"
            android:text="Email: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtPSoTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2medium"
            android:text="Tiền hiện có: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtPLoaiTaiKhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"

            android:fontFamily="@font/baloothambi2medium"
            android:text="Loại tài khoản: "
            android:textSize="18sp" />



        <Button
            android:id="@+id/btnhoso"
            android:layout_width="match_parent"
            android:layout_height="36sp"
            android:layout_marginVertical="7sp"
            android:background="@color/secondary"
            android:paddingLeft="10sp"
            android:drawableStart="@drawable/baseline_ho_so"
            android:text="Chỉnh sửa hồ sơ của bạn" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtPDiaChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/baloothambi2medium"
        android:text="Địa chỉ: "
        android:textSize="18sp" />

</RelativeLayout>